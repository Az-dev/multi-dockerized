{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "doc20az/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "backend",
            "image": "doc20az/multi-server",
            "hostname": "backend",
            "essential": false
        },
        {
            "name": "worker",
            "hostname":"worker",
            "image":"doc20az/multi-worker",
            "essential":false
        },
        {
            "name": "nginx",
            "hostname": "nginx_proxy",
            "image": "doc20az/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 8090,
                    "containerPort": 80
                }
            ],
            "links": ["client","backend"]
        }

    ]
}